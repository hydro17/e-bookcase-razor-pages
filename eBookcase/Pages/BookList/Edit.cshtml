@page
@model eBookcase.Pages.BookList.EditModel
@{
    ViewData["Title"] = "Edit";
}

<br /><br />
<h3 class="text-info" style="font-weight:normal">Edit book</h3>
<br />

<form method="post" class="p-4 border rounded">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>

    <input type="hidden" asp-for="Book.Id" />

    <div class="form-group row">
        <div class="col-1">
            <label asp-for="Book.Name"></label>
        </div>

        <div class="col-4">
            <input asp-for="Book.Name" class="form-control" />
        </div>

        <span asp-validation-for="Book.Name" class="text-danger"></span>
    </div>

    <div class="form-group row">
        <div class="col-1">
            <label asp-for="Book.Author"></label>
        </div>

        <div class="col-4">
            <input asp-for="Book.Author" class="form-control" />
        </div>

        <span asp-validation-for="Book.Author" class="text-danger"></span>
    </div>

    <div class="row">
        <div class="col-1">
            <label asp-for="Book.ISBN"></label>
        </div>

        <div class="col-4">
            <input asp-for="Book.ISBN" class="form-control" />
        </div>

        <span asp-validation-for="Book.ISBN" class="text-danger"></span>
    </div>

    <br />

    <button type="submit" class="btn btn-primary">Update</button>
    <a asp-page="Index" class="btn btn-success">Back To List</a>
</form>

@section Scripts{
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial"); }
}


