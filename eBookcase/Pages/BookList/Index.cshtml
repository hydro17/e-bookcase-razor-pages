@page
@model eBookcase.Pages.BookList.IndexModel
@{
    ViewData["Title"] = "Index";
}

<br /><br />
<div class="row">
    <div class="col">
        <h3 class="text-info" style="font-weight:normal">Book List</h3>
    </div>
    <div class="col text-right">
        <a asp-page="Create" class="btn btn-info">Create New Book</a>
    </div>
</div>

<br />
@if (Model.Message != null)
{
    <div class="alert alert-info alert-dismissible" role="alert">
        <button type="button" class="close" data-dismiss="alert" aria-label="close">
            <span aria-hidden="true">&times;</span>
        </button>
        @Model.Message
    </div>
}

@if (Model.Books.Count() > 0)
{
<table class="table table-striped border">
    <tr>
        <th>
            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Name)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().Author)
        </th>
        <th>
            @Html.DisplayNameFor(m => m.Books.FirstOrDefault().ISBN)
        </th>
        <th>

        </th>
    </tr>

    @foreach (var book in Model.Books)
    {
    <tr>
        <td>@Html.DisplayFor(m => book.Name)</td>
        <td>@Html.DisplayFor(m => book.Author)</td>
        <td>@Html.DisplayFor(m => book.ISBN)</td>
        <td style="text-align:right">
            <a asp-page="Edit" asp-route-id="@book.Id" class="btn btn-success btn-sm">Edit</a>
            <a asp-page-handler="Delete" asp-route-id="@book.Id" class="btn btn-danger btn-sm">Delete</a>
        </td>
    </tr>
    }
</table>
<br />
}
else
{
    <hr />
    <h5 class="text-danger">There are no books</h5>
}

